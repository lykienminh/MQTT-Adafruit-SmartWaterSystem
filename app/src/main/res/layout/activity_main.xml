<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bg"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_main"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/bg_rounded"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_rounded"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <TextView
        android:id="@+id/ic_line_1"
        android:layout_width="1dp"
        android:layout_height="157dp"
        android:background="@drawable/ic_line"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/bg_rounded"
        app:layout_constraintLeft_toLeftOf="@id/bg_rounded"
        app:layout_constraintRight_toRightOf="@id/bg_rounded"
        app:layout_constraintTop_toTopOf="@id/bg_rounded" />

    <TextView
        android:id="@+id/ic_line_2"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@drawable/ic_line"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/bg_rounded"
        app:layout_constraintLeft_toLeftOf="@id/bg_rounded"
        app:layout_constraintRight_toRightOf="@id/bg_rounded"
        app:layout_constraintTop_toTopOf="@id/bg_rounded" />

    <TextView
        android:id="@+id/text_sws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Hệ thống\ntưới nước tự động"
        android:textColor="#FBFDFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/text_soil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Độ ẩm đất"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/ic_line_2"
        app:layout_constraintEnd_toStartOf="@+id/ic_line_1"
        app:layout_constraintStart_toStartOf="@+id/ic_line_2" />

    <TextView
        android:id="@+id/soil"
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/roboto_medium"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#584481"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_soil"
        app:layout_constraintEnd_toEndOf="@+id/text_soil"
        app:layout_constraintStart_toStartOf="@+id/text_soil" />

    <TextView
        android:id="@+id/text_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Tự động"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ic_line_1"
        app:layout_constraintEnd_toStartOf="@+id/ic_line_1"
        app:layout_constraintStart_toStartOf="@+id/ic_line_2" />

    <TextView
        android:id="@+id/pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Tắt"
        android:textAlignment="center"
        android:textColor="#584481"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_pump"
        app:layout_constraintEnd_toEndOf="@+id/text_pump"
        app:layout_constraintStart_toStartOf="@+id/text_pump" />

    <TextView
        android:id="@+id/text_pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Máy bơm"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_soil"
        app:layout_constraintEnd_toEndOf="@+id/ic_line_2"
        app:layout_constraintStart_toEndOf="@+id/ic_line_1"
        app:layout_constraintTop_toTopOf="@+id/text_soil" />

    <TextView
        android:id="@+id/isAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Bật"
        android:textAlignment="center"
        android:textColor="#584481"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_auto"
        app:layout_constraintEnd_toEndOf="@+id/text_auto"
        app:layout_constraintStart_toStartOf="@+id/text_auto" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Thời gian tưới"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_auto"
        app:layout_constraintEnd_toEndOf="@+id/ic_line_2"
        app:layout_constraintStart_toEndOf="@+id/ic_line_1"
        app:layout_constraintTop_toTopOf="@+id/text_auto" />

    <TextView
        android:id="@+id/countdownTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/roboto_medium"
        android:text="10:00"
        android:textAlignment="center"
        android:textColor="#584481"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_time"
        app:layout_constraintEnd_toEndOf="@+id/text_time"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/text_time" />

    <EditText
        android:id="@+id/editTextMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Nhập số phút"
        android:inputType="datetime"
        android:maxLength="15"
        android:maxLines="1"
        android:minEms="5"
        android:text=""
        android:textColor="#584481"
        android:textColorHint="#757575"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/switch_pump"
        app:layout_constraintTop_toBottomOf="@+id/switch_pump" />

    <TextView
        android:id="@+id/text_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Điều khiển"
        android:textColor="#584481"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ic_line_2"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintVertical_bias="0.45" />

    <Switch
        android:id="@+id/switch_pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="middle"
        android:enabled="false"
        android:fontFamily="@font/roboto"
        android:forceDarkAllowed="false"
        android:text="Máy bơm"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text_custom"
        app:layout_constraintTop_toBottomOf="@+id/text_custom" />

    <Switch
        android:id="@+id/switch_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:checked="true"
        android:ellipsize="middle"
        android:fontFamily="@font/roboto"
        android:forceDarkAllowed="false"
        android:text="Tự động"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/switch_pump"
        app:layout_constraintStart_toEndOf="@+id/switch_pump"
        app:layout_constraintTop_toTopOf="@+id/switch_pump" />

    <Button
        android:id="@+id/btn_set_time"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:text="OK"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/editTextMinute"
        app:layout_constraintStart_toEndOf="@+id/editTextMinute"
        app:layout_constraintTop_toTopOf="@+id/editTextMinute" />


</androidx.constraintlayout.widget.ConstraintLayout>